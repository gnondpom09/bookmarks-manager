{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "prettier"
    ],
    "rules": {
        "class-methods-use-this": "off",
        "no-underscore-dangle": "off",
        "import/no-unresolved": [
            0, 
            { "caseSensitive": false }
         ],
        "prettier/prettier":  [
            "error",
            {
                "singleQuote": true
            }
        ]
    }
}
